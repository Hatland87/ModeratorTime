<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ControllActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageViewInnlegg"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#A4E2EA"
            android:contentDescription="@string/imgButton"
            android:onClick="startInnlegg"
            android:padding="100sp"
            app:srcCompat="@drawable/innlegg" />

        <ImageView
            android:id="@+id/imageViewReplikk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F8D48C"
            android:contentDescription="@string/imgButton"
            android:onClick="startReplikk"
            android:padding="100sp"
            app:srcCompat="@drawable/replikk" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>